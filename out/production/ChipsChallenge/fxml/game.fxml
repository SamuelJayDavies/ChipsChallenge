<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChipsChallenge.GameController">
   <children>
      <HBox fx:id="levelNameBox" alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="115.0" prefWidth="1000.0">
         <children>
            <Label fx:id="levelNumTxt" contentDisplay="BOTTOM" text="Level num">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <Label fx:id="levelNameTxt" contentDisplay="BOTTOM" text="Level Name">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" layoutY="460.0" prefHeight="140.0" prefWidth="1000.0">
         <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="140.0" prefWidth="687.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#testMethod" text="Reset">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#testFileLoad" text="Save">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="saveReturnBtn" mnemonicParsing="false" onAction="#drawGame" text="Save/Return">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT">
               <children>
                  <Label alignment="TOP_RIGHT" contentDisplay="BOTTOM" text="Time: 120">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <Label contentDisplay="BOTTOM" text="Chips: 001">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
      <AnchorPane layoutX="-1.0" layoutY="113.0" prefHeight="348.0" prefWidth="1000.0">
         <children>
            <Canvas fx:id="mainCanvas" height="348.0" layoutY="-1.0" width="1000.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
